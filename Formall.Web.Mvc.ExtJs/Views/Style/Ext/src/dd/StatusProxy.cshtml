<style type="text/css">
.#@(Model.Prefix)dd-drag-repair {
    .#@(Model.Prefix)dd-drag-ghost {
        @Opacity(.6);
    }

    .#@(Model.Prefix)dd-drop-icon {
        display: none;
    }
}

.#@(Model.Prefix)dd-drag-ghost {
    @Opacity(.85);
    
    padding: 5px;
    padding-left: 20px;
    
    white-space: nowrap;
    
    color: #000;
    font: normal ceil($font-size * .9) $font-family;
    
    border: 1px solid;
    border-color: #ddd #bbb #bbb #ddd;
    
    background-color: #fff;
}

.#@(Model.Prefix)dd-drop-icon {
    position: absolute;
    top: 3px;
    left: 3px;
    
    display: block;
    
    width: 16px;
    height: 16px;
    
    background-color: transparent;
    background-position:  center;
    background-repeat:  no-repeat;
    
    z-index: 1;
}

@if (Model.IncludeRtl)
{
    if (Model.IncludeSafari)
    {
    @:.#@(Model.Prefix)rtl {
        // These rules do not account for applications that contain nested rtl/ltr
        // components, because it's a challenge to determine what the direction
        // of the drag StatusProxy should be.  For now we just switch it to rtl styling
        // if any ancestor has the x-rtl class.
        @:.#@(Model.Prefix)dd-drag-ghost {
        @:    padding-left: 5px;
        @:    padding-right: 20px;
        @:}
        @:.#@(Model.Prefix)dd-drop-icon {
        @:    left: auto;
        @:    right: 3px;
        @:}
    }
}

@{
    var drop_ok_background_url = "theme-background-image('dd/drop-yes') !default";
    var drop_ok_add_background_url = "theme-background-image('dd/drop-add') !default";
    var drop_not_ok_background_url = "theme-background-image('dd/drop-no') !default";
}

.#@(Model.Prefix)dd-drop-ok .#@(Model.Prefix)dd-drop-icon {
    background-image: @drop_ok_background_url;
}

.#@(Model.Prefix)dd-drop-ok-add .#@(Model.Prefix)dd-drop-icon {
    background-image: @drop_ok_add_background_url;
}

// nodrop rule must go at end to override drop OK icon rules
.#@(Model.Prefix)dd-drop-nodrop div.#@(Model.Prefix)dd-drop-icon {
    background-image: @drop_not_ok_background_url;
}
</style>